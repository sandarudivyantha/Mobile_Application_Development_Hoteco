            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="@string/enter_tp_no"
            android:inputType="number|phone"
            android:paddingLeft="10dp"
            android:textColor="#2E2B2B"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName11"
            app:layout_constraintTop_toBottomOf="@+id/txt_update_bath" />

        <TextView
            android:id="@+id/editTextTextPersonName13"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="#B3ACAC"
            android:drawableBottom="@drawable/ic_monetization"
