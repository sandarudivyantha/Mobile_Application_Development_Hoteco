<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.UpdateHotelDetailsActivity"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_UpdateNewHotel"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="88dp"
            android:text="@string/update_hotel"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editUpdateDate"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_bg"
            android:drawableRight="@drawable/ic_date_calender"
            android:ems="10"
            android:hint="@string/date"
            android:inputType="date"
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:textColorHint="@color/black"
            app:layout_constraintStart_toEndOf="@+id/txtUserNameUpdateHotel"
            app:layout_constraintTop_toBottomOf="@+id/txt_UpdateNewHotel"
            app:layout_goneMarginTop="5dp" />

        <EditText
            android:id="@+id/txtUserNameUpdateHotel"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_bg"
            android:drawableLeft="@drawable/ic_person"
            android:fontFamily="sans-serif"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_UpdateNewHotel" />

        <TextView
            android:id="@+id/txtUpdateHotelName"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="#B3ACAC"
            android:hapticFeedbackEnabled="false"
            android:padding="5dp"
            android:text="@string/hotel_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUserNameUpdateHotel" />

        <EditText
            android:id="@+id/editUpdateHotelName"
            android:layout_width="254dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="@string/enter_hotel_name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#2E2B2B"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/txtUpdateHotelName"
            app:layout_constraintTop_toBottomOf="@+id/editUpdateDate" />

        <TextView
