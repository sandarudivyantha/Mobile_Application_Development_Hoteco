            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/edit_update_bedIcon"
            app:layout_constraintTop_toBottomOf="@+id/editUpdateTitle" />

        <EditText
            android:id="@+id/edit_update_bathIcon"
